{
    "ts-node": {
        "transpileOnly": true,
        "require": [
            "tsconfig-paths/register"
        ],
        "compilerOptions": {
          "module": "commonjs"
        }
    },
    "compilerOptions": {
        "composite": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "paths": {
            "packages/*": ["./packages/*"],
            "client/*": ["./client/src/*"],
            "server/*": ["./server/src/*"],
            "shared/*": ["./shared/*"],
        },
        "rootDir": ".",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "references": [
        { "path": "./client" },
        { "path": "./server" },
        { "path": "./packages" }
    ],
}
