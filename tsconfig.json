{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "ESNext",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,
        "rootDir": ".",
        "paths": {
            "@shared/*": ["./shared/*"],
            "@client/*": ["./client/src/*"],
            "@server/*": ["./server/src/*"],
        },
    },
    "include": ["./shared"],
}
