{
    "ts-node": {
        "compilerOptions": {
          "module": "commonjs"
        }
    },
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ES2020"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "paths": {
            "client/*": ["./client/src/*"],
            "server/*": ["./server/src/*"],
            "shared/*": ["./shared/*"],
        },
        "rootDir": ".",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
    },
    "include": [
        "./shared"
    ],
}
